<h3> Atualize uma Tarefa </h3>
<div class="form-inline">
  <%= form_for @task do |f|%>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :done %>
  <%= f.text_field :done %>


   <div class="btn"><%= f.submit %></div>
<% end %>
</div>

